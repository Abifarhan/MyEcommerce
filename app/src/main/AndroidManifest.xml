<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abifarhan.myecommerce">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyEcommerce">
        <activity android:name=".view.ui.settings.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Settings"/>
        <activity
            android:name=".view.ui.dashboard.DashBoardActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".view.ui.profile.UserProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ui.auth.forgotpassword.ForgotPasswordActivity"
            android:theme="@style/Theme.MyEcommerce.NoActionBar" />
        <activity
            android:name=".view.ui.auth.register.RegisterActivity"
            android:theme="@style/Theme.MyEcommerce.NoActionBar" />
        <activity android:name=".view.ui.auth.login.LoginActivity" />
        <activity
            android:name=".view.ui.splash.SplashActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ui.main.MainActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>